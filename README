------------------------------------------------------------------
-- Ayuda.
------------------------------------------------------------------

Uso: 
	./mhs <Opciones Generales> [--reps <Cantidad>] [<Opciones Poblacionales> <Opciones Del Algoritmo>]

	--reps <Cantidad de repeticiones sin mejora>
	--help - Ayuda.
	-? - Ayuda.

Opciones Generales
	--tf <Tipo de Función Objetivo>
		MAX - Función de maximización.
		MIN - Función de minimización.
	--fi <Archivo de entrada>
	--fo <Archivo de salida>
	--t  <Tipo de archivo de entrada>
		PNG  - Imagen PNG.
		TIFF - Imagen TIFF.
		CSV  - Archivo CSV.
	--k <Cantidad de Clusters Iniciales>
	--a <Algoritmo a utilizar>
		Kmeans - Algoritmo Kmeans.
		GA     - Algoritmo Genético..
		PSO    - Algoritmo PSO.
		DE     - Algoritmo DE.
		Ant    - Algoritmo Hormiga.
		Bee    - Algoritmo Abeja.

Ejemplo:
  ./mhs --tf MAX --fi img/lena.png --fo salida.png --t PNG --k 10 --a Kmeans --reps 3

Opciones Poblacionales
	--i <Cantidad de individuos/partículas>

Opciones Algoritmo Genético
	--pm <Probabilidad de mutación>
	--pc <Probabilidad de cruce>
	--tt <Tamaño del torneo>

Ejemplo:
  ./mhs --tf MAX --fi img/lena.png --fo salida.png --t PNG --k 10 --a GA --i 30 --pm 0.1 --pc 0.8 --tt 15--reps 10


Opciones Algoritmo PSO
	--c1 <Constante de la componente cognitiva>
	--c2 <Constante de la componente social>
	--W <Peso inercial>
	--w1 <Peso de la distancia intracluster> (Opcional)
	--w2 <Peso de la distancia intercluster> (Opcional)
	--w3 <Peso del error>                    (Opcional)
	--mx <Valor máximo de un atributo>
		a1,a2,...,am - Donde ai es el máximo valor para el atributo i.
	--mn <Valor mínimo de un atributo>
		a1,a2,...,am - Donde ai es el mínimo valor para el atributo i.
	--vmx <Velocidad máxima>
	--weighted - Si se utilizará la función objetivo con pesos. (Opcional)

Ejemplo:
 ./mhs --tf MAX --fi img/lena.png --fo salida.png --t PNG --k 10 --a PSO --i 30 --c1 1.49 --c2 1.49 --W 0.72 --w1 0.0 --w2 0.0 --w3 0.0 --mx 255.0,255.0,255.0 --mn 0.0,0.0,0.0 --vmx 255 --reps 10


